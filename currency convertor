	cin>>option;
	
	switch(option)
	{
		case 1:
		cout<<amount<<"â‚¬ pakistani rupees   is="<<amount/0.0034;
			break;
			
		case 2:
		cout<<amount<<" BHD in pakistani rupees is="<<amount/0.00136;
